<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<display-name>WarCifrasControl</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- Filtro del componente cmpSesiones -->
	<filter>
		<display-name>FilterLogin</display-name>
		<filter-name>FilterLogin</filter-name>
		<filter-class>mx.isban.agave.commons.filters.FilterLogin</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>FilterLogin</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	
	<listener>
		<listener-class>mx.isban.agave.commons.listeners.StateSessionListener</listener-class>
	</listener>
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/i18n.xml
			/WEB-INF/DispatcherPrincipal-servlet.xml
			/WEB-INF/DispatcherPublico-servlet.xml
			/WEB-INF/DispatcherErrores-servlet.xml
			/WEB-INF/DispatcherReprocesos-servlet.xml
			/WEB-INF/DispatcherAdministracion-servlet.xml
			/WEB-INF/DispatcherFacturas-servlet.xml
			/WEB-INF/DispatcherCifrasControl-servlet.xml
		</param-value>
	</context-param>
	
	<!-- Parametro y listener para dar del alta el componente cmpConfiguracion -->
	<context-param>
		<param-name>IdConfigApp</param-name>
		<param-value>IdConfigAppCifrasControlWEB</param-value>
	</context-param>
	
	<listener>
		<listener-class>mx.isban.agave.configuracion.ListenerConfig</listener-class>
	</listener>
	
	<!-- Filtro de exportacion -->
	<filter>
    	<filter-name>ResponseOverrideFilter</filter-name>
    	<filter-class>org.displaytag.filter.ResponseOverrideFilter</filter-class>
  	</filter>
  	
  	<filter-mapping>
    	<filter-name>ResponseOverrideFilter</filter-name>
    	<url-pattern>*.do</url-pattern>
  	</filter-mapping>
  	<filter-mapping>
    	<filter-name>ResponseOverrideFilter</filter-name>
    	<url-pattern>*.jsp</url-pattern>
  	</filter-mapping>
	
	<!-- Dispatcher Principal -->
	<servlet>
		<servlet-name>DispatcherPrincipal</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>DispatcherPrincipal</servlet-name>
		<url-pattern>/principal/*</url-pattern>
	</servlet-mapping>
	
	<!-- Dispatcher Publico -->
	<servlet>
		<servlet-name>DispatcherPublico</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>DispatcherPublico</servlet-name>
		<url-pattern>/publico/*</url-pattern>
	</servlet-mapping>
	
	<!-- Dispatcher Errores -->
	<servlet>
		<servlet-name>DispatcherErrores</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>DispatcherErrores</servlet-name>
		<url-pattern>/errores/*</url-pattern>
	</servlet-mapping>
	
	<!-- Dispatcher Reprocesos -->
	<servlet>
		<servlet-name>DispatcherReprocesos</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>DispatcherReprocesos</servlet-name>
		<url-pattern>/reprocesos/*</url-pattern>
	</servlet-mapping>
	
	<!-- Dispatcher Administracion -->
	<servlet>
		<servlet-name>DispatcherAdministracion</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>DispatcherAdministracion</servlet-name>
		<url-pattern>/administracion/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DispatcherFacturas</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>DispatcherFacturas</servlet-name>
		<url-pattern>/facturas/*</url-pattern>
	</servlet-mapping>

	<!-- Dispatcher Cifras control -->
	<servlet>
		<servlet-name>DispatcherCifrasControl</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>DispatcherCifrasControl</servlet-name>
		<url-pattern>/cifrascontrol/*</url-pattern>
	</servlet-mapping>
			
</web-app>