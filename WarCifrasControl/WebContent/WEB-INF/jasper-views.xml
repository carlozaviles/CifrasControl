<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
  http://www.springframework.org/schema/beans 
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  http://www.springframework.org/schema/util 
  http://www.springframework.org/schema/util/spring-util-3.0.xsd">
    
	<!--Configuracion JasperReportsXlsView CifrasControl  -->
 	<bean id="xlsCifrasControl"
          class="org.springframework.web.servlet.view.jasperreports.JasperReportsXlsView"
          p:url="classpath:/recursos/consultaCifras.jrxml"
          p:reportDataKey="datasourceAplicativoOrigen"
          p:subReportUrls-ref="subReportUrls"
          p:subReportDataKeys-ref="subReportDatasource"/>

     <util:map id="subReportUrls">
			<entry key="subReportComprobanteFiscal" value="classpath:/recursos/comprobanteFiscal.jrxml"/>
			<entry key="subReportSistemaAdministracion" value="classpath:/recursos/sistemaAdministracion.jrxml"/>
			<entry key="subReportCuentas" value="classpath:/recursos/cuentas.jrxml"/>			                                                                                   
     </util:map>
 
	 <util:list id="subReportDatasource">
			<value>dataSourceComprobanteFiscal</value>
			<value>dataSourceSistemaAdministracion</value>
			<value>dataSourceCuentas</value>
	</util:list>
     <!-- Fin Configuracion Reporte Cifras de Control  -->
     
     <!-- Configuracion para reporte de incidencias de cifras -->
     <bean id="xlsIncidencias" 
     	   class="org.springframework.web.servlet.view.jasperreports.JasperReportsXlsView"
     	   p:url="classpath:/recursos/ConsultaIncidencias.jrxml"
     	   p:reportDataKey="dataSourceIncidencias"/>
     <!-- Fin de configuracion para reporte de incidencias de cifras -->
     
     <!-- Configuracion para reporte de facturas -->
     <bean id="xlsFacturas" 
     	   class="org.springframework.web.servlet.view.jasperreports.JasperReportsXlsView"
     	   p:url="classpath:/recursos/reporteFacturas.jrxml"
     	   p:reportDataKey="dataSourceFacturas"/>
     <!-- Fin de configuracion para reporte de facturas -->
     
     <!-- Configuracion para reporte de Notas de Credito-->
     <bean id="xlsNotas" 
     	   class="org.springframework.web.servlet.view.jasperreports.JasperReportsXlsView"
     	   p:url="classpath:/recursos/reporteNotas.jrxml"
     	   p:reportDataKey="dataSourceNotas"/>
     <!-- Fin de configuracion para reporte de Notas de credito -->
     
    <!-- Configuracion para reporte de Notas de Credito-->
     <bean id="xlsDivisas" 
     	   class="org.springframework.web.servlet.view.jasperreports.JasperReportsXlsView"
     	   p:url="classpath:/recursos/reporteDivisas.jrxml"
     	   p:reportDataKey="dataSourceDivisas"/>
     <!-- Fin de configuracion para reporte de Notas de credito -->
     
    <!-- Configuracion para reporte de Recibos Deducibles-->
     <bean id="xlsRecibos" 
     	   class="org.springframework.web.servlet.view.jasperreports.JasperReportsXlsView"
     	   p:url="classpath:/recursos/reporteRecibos.jrxml"
     	   p:reportDataKey="dataSourceRecibos"/>
     <!-- Fin de configuracion para reporte de Recibos Deducibles -->    
     
    <!-- Configuracion para reporte de CANCELACIONES-->
     <bean id="xlsCancelaciones" 
     	   class="org.springframework.web.servlet.view.jasperreports.JasperReportsXlsView"
     	   p:url="classpath:/recursos/reporteCancelaciones.jrxml"
     	   p:reportDataKey="dataSourceCancelaciones"/>
     <!-- Fin de configuracion para reporte de CANCELACIONES -->      
     
    <!-- Configuracion para reporte de REPROCESOS-->
     <bean id="xlsReprocesos" 
     	   class="org.springframework.web.servlet.view.jasperreports.JasperReportsXlsView"
     	   p:url="classpath:/recursos/reporteReprocesos.jrxml"
     	   p:reportDataKey="dataSourceReprocesos"/>
     <!-- Fin de configuracion para reporte de REPROCESOS -->      
     </beans>