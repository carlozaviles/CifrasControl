<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/jsp/private/reprocesos/"/>
		<property name="suffix" value=".jsp"/>
	</bean>
	
	<bean class ="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    	<property name="location">
        	<value>file:/arquitecturaAgave/DistV1/Configuracion/CifrasControl_AmbienteEJB.properties</value>
       	</property>
     </bean>
	
	<bean id="boReprocesos" class="org.springframework.ejb.access.SimpleRemoteStatelessSessionProxyFactoryBean">
		<property name="jndiName" value="${EJBCLUSTER}mx.isban.cifrascontrol.servicio.reprocesos.BOReprocesos"/>
		<property name="businessInterface" value="mx.isban.cifrascontrol.servicio.reprocesos.BOReprocesos"/>
	</bean>
	
	<bean id="controllerReprocesoSolicitud" name="controllerReprocesoSolicitud" class="mx.isban.cifrascontrol.controller.reprocesos.ControllerReprocesoSolicitud">
		<property name="reprocesos" ref="boReprocesos"/>
	</bean>
	
	<bean id="controllerConsultaReprocesos" name="controllerConsultaReprocesos" class="mx.isban.cifrascontrol.controller.reprocesos.ControllerConsultaReprocesos">
		<property name="reprocesos" ref="boReprocesos"/>
	</bean>
</beans>